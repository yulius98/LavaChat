{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "serve": "php artisan serve:with-reverb",
        "serve-only": "php artisan serve",
        "reverb": "php artisan reverb:start --port=8081",
        "start": "concurrently \"npm run reverb\" \"npm run serve-only\" --names \"REVERB,LARAVEL\" --prefix-colors \"blue,green\"",
        "dev:full": "concurrently \"npm run reverb\" \"npm run serve-only\" \"npm run dev\" --names \"REVERB,LARAVEL,VITE\" --prefix-colors \"blue,green,yellow\""
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "laravel-echo": "^2.1.7",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^3.1.0",
        "vite": "^7.0.4"
    }
}
